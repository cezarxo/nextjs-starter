# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Next.js Starter Skeleton"
NEXT_PUBLIC_APP_DESCRIPTION="A modern Next.js starter template"

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=10000

# Socket.io Configuration
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_PATH=/api/socket

# Database Configuration (Optional)
MONGODB_URI=mongodb://localhost:27017/nextjs_starter
MONGODB_DB_NAME=nextjs_starter

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication (Optional)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET_INTERNAL=your-internal-secret-here

# External APIs (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM_ID

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload (Optional)
NEXT_PUBLIC_UPLOAD_URL=http://localhost:3000/api/upload
MAX_FILE_SIZE=10485760

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Development
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Performance
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
